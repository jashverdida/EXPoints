# Environment Configuration
# Copy this file to .env and update with your local settings
# DO NOT commit .env file to git (it's in .gitignore)

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Supabase Configuration (Cloud Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Legacy MySQL Configuration (keep for backup/local testing)
DB_HOST=localhost
DB_NAME=expoints_db
DB_USER=root
DB_PASS=

# Firebase Configuration (optional - for future features)
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=

# Session Settings
SESSION_LIFETIME=7200
SESSION_SECURE=false

# Security
SECURE_COOKIES=false
